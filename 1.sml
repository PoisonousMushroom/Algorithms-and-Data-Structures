fun gcd (m: IntInf.int,0)=m
  | gcd (0,m: IntInf.int)=m
  | gcd (m:IntInf.int,n:IntInf.int)=
    if n>m then
      let val (_,v)=IntInf.divMod(n,m)
          val b=m
          in gcd(v,b) end
    else
      let val (_,v)=IntInf.divMod(m,n)
          val b=n
      in gcd(v,b) end;



